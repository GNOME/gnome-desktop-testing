         xmlns="http://usefulinc.com/ns/doap#">

  <name>gnome-desktop-testing</name>
  <shortname>gnome-desktop-testing</shortname>

  <shortdesc xml:lang="en">Runner for InstalledTests specification</shortdesc>

  <description xml:lang="en">The InstalledTests specification
  describes how components (packages) can install their tests into the
  target root, in addition to (or instead of) providing "make check".
  This separates building from testing, which has numerous benefits.
  </description>

  <homepage rdf:resource="https://wiki.gnome.org/Initiatives/GnomeGoals/InstalledTests" />
